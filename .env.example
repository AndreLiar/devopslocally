# DevOps Lab Environment Configuration
# Copy this file to .env.local and update values as needed

################################################################################
# KUBERNETES CONFIGURATION
################################################################################
K8S_CONTEXT=docker-desktop
K8S_CLUSTER=docker-desktop
K8S_NAMESPACE=default
KUBECONFIG=$HOME/.kube/config

################################################################################
# DOCKER REGISTRY
################################################################################
REGISTRY_URL=localhost:5001
REGISTRY_USERNAME=
REGISTRY_PASSWORD=

################################################################################
# ARGOCD CONFIGURATION
################################################################################
ARGOCD_NAMESPACE=argocd
ARGOCD_REPO_URL=https://github.com/AndreLiar/devopslocally
ARGOCD_REPO_BRANCH=main
ARGOCD_ADMIN_PASSWORD=admin123
ARGOCD_UI_PORT=8080

################################################################################
# MONITORING CONFIGURATION
################################################################################
MONITORING_NAMESPACE=monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123
GRAFANA_URL=http://localhost:3000
PROMETHEUS_URL=http://localhost:9090
LOKI_URL=http://localhost:3100

################################################################################
# APPLICATION CONFIGURATION
################################################################################
APP_NAMESPACE=default
APP_PORT=3000
APP_ENVIRONMENT=local
APP_LOG_LEVEL=debug
APP_DEBUG=true

################################################################################
# SERVICE CONFIGURATION (auth-service example)
################################################################################
AUTH_SERVICE_IMAGE=auth-service
AUTH_SERVICE_TAG=latest
AUTH_SERVICE_REPLICAS=1
AUTH_SERVICE_PORT=3000

################################################################################
# GITHUB CONFIGURATION
################################################################################
GITHUB_TOKEN=
GITHUB_USERNAME=
GITHUB_EMAIL=user@example.com
GITHUB_REPO_NAME=devopslocally

################################################################################
# DATABASE CONFIGURATION (Optional - for future use)
################################################################################
DB_HOST=postgres-service
DB_PORT=5432
DB_NAME=devopsdb
DB_USER=postgres
DB_PASSWORD=postgres
REDIS_URL=redis://redis-service:6379

################################################################################
# SECRETS & CREDENTIALS (Keep these external in production!)
################################################################################
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET=dev-jwt-secret-change-in-production
API_KEY=dev-api-key-change-in-production

################################################################################
# BUILD & DEPLOYMENT
################################################################################
BUILD_CONTEXT=.
BUILD_DOCKERFILE=Dockerfile
DOCKER_BUILD_ARGS=

################################################################################
# HELM CONFIGURATION
################################################################################
HELM_REPO_UPDATE=true
HELM_WAIT=true
HELM_TIMEOUT=5m

################################################################################
# GENERAL
################################################################################
PROJECT_ROOT=$(pwd)
PROJECT_NAME=devopslocally
ENVIRONMENT=local
VERBOSE=true
